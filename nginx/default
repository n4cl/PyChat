server {
    listen       80;

    access_log /dev/stdout;
    error_log /dev/stdout;

    location / {
        default_type text/html;
        root   /usr/share/nginx/html/app;
        index chat;
    }

    location /app/ {
        proxy_read_timeout 300;
        proxy_pass http://127.0.0.1:8000/;
    }
}
